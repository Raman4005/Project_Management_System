@model IEnumerable<Project_Management_System.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h2>Employees</h2>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">Add New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id">Update Employee</a> |
                <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">View Employee</a> |
                <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.Id">Delete Employee</a>
            </td>
        </tr>
}
    </tbody>
</table>
